<simulation verbosity="high">
  <output prefix='simulation'>
    <properties stride='1' filename='out'>  [ time{femtosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, pressure_cv{bar}, volume ] </properties>
    <trajectory stride='10' filename='pos' format='pdb' cell_units='angstrom'> positions{angstrom} </trajectory>
    <checkpoint stride='1' filename='chk' overwrite='true'/>
  </output>
  <total_steps>2000000</total_steps>
  <prng><seed>950</seed></prng>
  <ffsocket name='lammps' mode='unix' pbc='True'>
   <port>12345</port> 
   <timeout>20000</timeout> 
   <address>ClayNN-D3</address> 
   <latency>0.01</latency> 
   <slots>4</slots>
  </ffsocket>
  <system>
    <forces> <force forcefield='lammps' weight='1.0'></force> </forces>
    <initialize nbeads='16'>
      <file mode='xyz'> ipi.xyz </file>
      <velocities mode='thermal' units="kelvin"> 300 </velocities>
    </initialize>
    <ensemble>
      <temperature units="kelvin">300</temperature>
      <stress units="bar">[1,0,0,0,1,0,0,0,1]</stress>
    </ensemble>
    <motion mode='dynamics'>
      <dynamics mode='nst'>
        <barostat mode="anisotropic">
          <tau units='femtosecond'>1000</tau>
          <h0>[19.477407179001222,0.0,0.0,0.11973777089245191,33.79527197239812,0.0,-7.251101341479786,-0.91308762651582,26.95937456301112]</h0>
        </barostat>
        <thermostat mode='pile_g'>
          <tau units="femtosecond">500</tau>
        </thermostat>
      <timestep units='femtosecond'>0.25</timestep>
      </dynamics>
      <fixcom>True</fixcom>
    </motion>
  </system>
</simulation>
